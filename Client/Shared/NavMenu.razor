<MudNavMenu>
    <MudText Typo="Typo.h4" Class="px-4">@AppConstants.AppName</MudText>
    <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">
        Diseño gráfico
    </MudText>
    <MudDivider Class="my-2" />
    <MudNavLink Href="/index">Dashboard</MudNavLink>
    <MudNavGroup Title="Settings" Expanded="true">
        <MudNavLink Href="/users">Users</MudNavLink>
        <MudNavLink Href="/settings">Security</MudNavLink>
    </MudNavGroup>
